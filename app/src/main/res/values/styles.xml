<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/cardviewheadingtext</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textColorPrimary">@color/heading</item>
        <item name="android:colorEdgeEffect"
            tools:targetApi="lollipop">@color/black</item>
        <item name="actionMenuTextColor">@color/black</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlHighlight">@color/cardviewheadingtext</item>
    </style>

    <style name="AppTheme.Toolbar" parent="AppTheme">
        <!--This line changes the color of text in Toolbar-->
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <!--This line changes the color of icons in toolbar (back, overflow menu icons)-->
        <item name="android:textColorSecondary">@color/colorAccent</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="bnve">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="bnve_primary_bg" parent="bnve">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="bnve_white_bg" parent="bnve">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="AppTheme.Appcompat.Translucent" parent="Theme.AppCompat.NoActionBar" >
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">#00000000</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:backgroundDimEnabled">false</item>

    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <color name="heading">#442B20</color>

</resources>
