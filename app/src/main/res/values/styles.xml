<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/cardviewheadingtext</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textColorPrimary">@color/heading</item>
        <item name="android:colorEdgeEffect"
            tools:targetApi="lollipop">@color/black</item>
        <item name="actionMenuTextColor">@color/black</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlHighlight">@color/cardviewheadingtext</item>
    </style>

    <style name="AppTheme.Toolbar" parent="AppTheme">
        <!--This line changes the color of text in Toolbar-->
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <!--This line changes the color of icons in toolbar (back, overflow menu icons)-->
        <item name="android:textColorSecondary">@color/colorAccent</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="bnve">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="bnve_primary_bg" parent="bnve">
        <item name="background">@color/colorPrimary</item>
    </style>

    <style name="bnve_white_bg" parent="bnve">
        <item name="background">@android:color/white</item>
    </style>

    <style name="AppTheme.Appcompat.Translucent" parent="Theme.AppCompat.NoActionBar" >
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="background">@android:color/black</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:backgroundDimEnabled">false</item>

    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="MaterialTapTargetPromptTheme">
        <!--Add custom base styling in here -->

        <item name="mttp_backgroundColour">@color/pinktrans</item>
        <item name="mttp_focalColour">@color/white</item>
        <item name="mttp_focalRadius">50dp</item>
        <item name="mttp_primaryTextSize">10sp</item>
        <item name="mttp_secondaryTextColour">@color/colorAccent</item>
        <item name="mttp_secondaryTextSize">14sp</item>
        <item name="mttp_maxTextWidth">600dp</item>
        <item name="mttp_textPadding">80dp</item>
        <item name="mttp_focalToTextPadding">12dp</item>
        <item name="mttp_textSeparation">0dp</item>
        <item name="mttp_primaryTextTypeface">serif</item>
        <item name="mttp_secondaryTextTypeface">monospace</item>
    </style>

    <style name="MaterialTapTargetPromptTheme.MaterialTapTargetSimple">

        <item name="mttp_backgroundColour">@color/pinktrans</item>
        <item name="mttp_focalColour">@color/pinktrans</item>
        <item name="mttp_focalRadius">20dp</item>
        <item name="mttp_primaryTextSize">10sp</item>
        <item name="mttp_secondaryTextColour">@color/colorAccent</item>
        <item name="mttp_secondaryTextSize">0dp</item>
        <item name="mttp_maxTextWidth">600dp</item>
        <item name="mttp_textPadding">0dp</item>
        <item name="mttp_focalToTextPadding">0dp</item>
        <item name="mttp_textSeparation">0dp</item>
        <item name="mttp_primaryTextTypeface">serif</item>
        <item name="mttp_secondaryTextTypeface">monospace</item>





    </style>




    <color name="heading">#442B20</color>
    <color name="colortrans" />

</resources>
