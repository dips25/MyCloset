<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/infoholder">


   <EditText
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_margin="5dp"
       android:background="@drawable/hint_text_border"
       android:padding="5dp"
       android:layout_marginTop="15dp"
       android:id="@+id/look_edit"
       android:textSize="14dp"
       android:hint="Enter Here"
       android:visibility="invisible"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentTop="true"
            android:background="@color/secondarycolor"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:id="@+id/looksvbttn"
            android:layout_alignParentBottom="true"
            android:background="@color/secondarycolor"
            android:paddingEnd="5dp"
            android:paddingStart="5dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_close_black_24dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:id="@+id/look_delete"
                android:scaleType="centerInside"/>

            <ImageView
                android:layout_width="48dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_check_black_24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="5dp"
                android:id="@+id/look_updt"
                android:scaleType="centerInside"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:id="@+id/look_icons"
            android:layout_marginStart="5dp"
            android:layout_toRightOf="@id/look_edit"
            android:layout_alignTop="@id/look_edit"
            android:layout_alignBottom="@id/look_edit"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="3"
            android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/whatsapp"
            android:layout_weight="1"
            android:visibility="invisible"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/facebook"
                android:layout_weight="1"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/share"
                android:layout_weight="1"
                android:visibility="gone"/>

        </LinearLayout>

    </RelativeLayout>

    <com.github.chrisbanes.photoview.PhotoView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/infoholder"
        android:id="@+id/zoom_image"/>
</RelativeLayout>