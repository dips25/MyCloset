<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".MainActivity"
    android:background="@color/white"
    android:id="@+id/cooordinator">

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/button_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/fab_vertical_margin"
        android:layout_marginRight="@dimen/fab_horizintal_margin"
        android:src="@drawable/ic_action_plus"
        android:layout_gravity="bottom|end"
        android:elevation="6dp"
        app:borderWidth="0dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        fab:menu_animationDelayPerItem="55"
        fab:menu_backgroundColor="@android:color/transparent"
        android:background="#00ffffff"
        app:menu_buttonSpacing="7dp"
        app:menu_fab_size="normal"
        app:menu_colorNormal="@color/black"
        fab:menu_colorRipple="@color/toolbar"
        app:menu_colorPressed="@color/black"
        app:fab_colorRipple="@color/backgrnd"
        >

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            app:fab_size="mini"
            app:fab_label="@string/gallery"
            app:fab_colorNormal="@color/toolbar"
            app:fab_colorPressed="@color/toolbar"
            app:pressedTranslationZ="12dp"
            android:elevation="6dp"
            android:src="@drawable/ic_photo_black_24dp_gallery"
             />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_label="@string/camera"
            app:fab_size="mini"
            android:elevation="6dp"
            app:fab_colorPressed="@color/toolbar"
            app:fab_colorRipple="@color/backgrnd"
            android:layout_gravity="bottom|end"
            app:pressedTranslationZ="12dp"
            android:src="@drawable/ic_photo_camera_black_24dp"
            app:fab_colorNormal="@color/toolbar"
             />
    </com.github.clans.fab.FloatingActionMenu>



    <android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/drawerlayout"
        android:clickable="true"

        >






        <android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/drawer"
            >

            <include layout="@layout/drag_mainactivity"/>

        </android.support.v4.widget.NestedScrollView>

        <android.support.design.widget.NavigationView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:elevation="4dp"
            android:id="@+id/nav"
            android:fitsSystemWindows="true"
            android:overScrollMode="always"
            >
            <include layout="@layout/filter"/>
        </android.support.design.widget.NavigationView>

    </android.support.v4.widget.DrawerLayout>

</RelativeLayout>